
@model List<Category> 
<Partial name="_Notification"/>

@{
    ViewData["Title"] = "index";
}

<div class="container ">
    <div class="row pt-4 pb-3">
    <div class="col-6">
        <h2 class="text-light">
            Category List
        </h2>
    </div>
    <div class="col-6  text-end">
        <h2 class="text-primary">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Add new</a>
            
        </h2>
    </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Dispaly Order
        </th>
        <th>
            Action
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(a=>a.DisplayOrder))
        {
        <tr>
            <td>
                @obj.Name
            </td>
            <td>
                @obj.DisplayOrder
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-secondary mx-2">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"  class="btn btn-danger mx-2">delete</a>
                </div> 
            </td>
        </tr>
        }
    </tbody>

</table>
</div>

